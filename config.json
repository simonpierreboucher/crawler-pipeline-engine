{
    "crawler": {
        "start_url": "url",
        "max_depth": 3,
        "use_playwright": true,
        "download": {
            "pdf": true,
            "doc": true,
            "image": true,
            "other": false
        },
        "output": {
            "crawler_output_dir": "./output",
            "checkpoint_file": "checkpoint.json",
            "logs_dir": "logs",
            "content_dir": "content",
            "content_rewritten_dir": "content_rewritten",
            "PDF": "PDF",
            "Image": "Image",
            "Doc": "Doc",
            "Archive": "Archive",
            "Audio": "Audio",
            "Video": "Video"
        },
        "limits": {
            "max_tokens": 2048,
            "concurrency": 5,
            "max_urls": null
        },
        "verbose": false
    },
    "llm": {
        "provider": "openai",
        "api_keys": ["api"],
        "max_tokens": 2048,
        "concurrency": 5,
        "system_prompt_file": "./prompt.txt"
    }
}
